<h1 class="display-4 mb-4">배열 반복 예제</h1>


<div class="container">
  <%= debug @fruits %>
  <div class="row mb-4">
    <div class="col-md-6">
      <h2 class="text-primary">과일 목록</h2>
      <div class="form-group">
        <% @fruits.each_with_index do |fruit, index| %>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="fruitRadio" id="fruit<%= index %>" value="<%= fruit %>" <%= index == 0 ? 'checked' : '' %>>
            <label class="form-check-label" for="fruit<%= index %>">
              <%= fruit %>
            </label>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%= debug @users %>
  <div class="row mb-4">
    <div class="col-12">
      <h2 class="text-primary">사용자 목록</h2>
      <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
          <thead class="table-dark">
            <tr>
              <th>이름</th>
              <th>나이</th>
              <th>이메일</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user['name'] %></td>
                <td><span class="badge bg-secondary"><%= user['age'] %></span></td>
                <td><a href="mailto:<%= user['email'] %>" class="text-decoration-none"><%= user['email'] %></a></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <%= debug @counter %>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header bg-info text-white">
          <h2 class="h5 mb-0">카운터 예제</h2>
        </div>
        <div class="card-body">
          <div class="counter-section d-flex flex-wrap">
            <% @counter.times do |i| %>
              <span class="badge bg-primary me-2 mb-2 p-2"><%= i + 1 %></span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
