<h1>Employees</h1>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Notes</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @employees.each do |employee| %>
        <tr>
            <td><%= employee.firstname %> <%= employee.lastname %></td>
            <td><%= employee.email %></td>
            <td><%= employee.notes %></td>
            <td><%= link_to 'Show', employee %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>